@model MvcAccount.Password.Reset.FinishViewModel
@section head {
<title>@Model.Title</title>
}
<div class="@Model.ViewCssClass">
   <h1>@Model.Title</h1>
   <p>@Model.Message</p>
   @Html.ValidationSummary(excludePropertyErrors: true)
   @using (Html.BeginForm()) {
      @Html.AntiForgeryToken()
      var inputHtml = Model.HtmlHelperForInput(Html);
      @inputHtml.EditorForModel("../../../Shared/EditorTemplates/Object")
      <div class="form-group buttons">
         <div></div>
         <div>
            <button type="submit" class="btn btn-primary">@Model.SubmitText</button>
         </div>
      </div>
   }
</div>